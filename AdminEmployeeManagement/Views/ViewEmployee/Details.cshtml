@model List<EmployeeJoinDepartmentView>;

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewData["Title"] = "View Employee Page";
}

<div class="text-center">
	<h1 class="fw-bold fs-1">List of all employees</h1>
</div>

<table class="table table-striped table-dark">
	<tr>
		<th class="col">Employee Name</th>
		<th class="col">Email</th>
		<th class="col">Mobile</th>
		<th class="col">Department Name</th>
		<th class="col">Status</th>
		<th class="col">Actions</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.Name</td>
			<td>@item.Email</td>
			<td>@item.Mobile</td>
			<td>@item.Department_Name</td>
			<td>@(item.Status ? "1" : "0")</td>
			<td>
				<a asp-controller="EditEmployee" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary m-1" role="button">Edit</a> 
				<a asp-controller="EditEmployee" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger m-1" role="button">Delete</a>
			</td>
		</tr>
	}
</table>